<div class="card" style="width: 18rem;" width="500px" height="500px">
  <img src="{{this.image_url}}" 
  class="card-img-top" alt="{{this.name}}">
  <div class="card-body">
    <h5 class="card-title">{{this.tagline}}</h5>
    <p class="card-text">{{this.description}}</p>
    
    {{#each this.food_pairing}}
        
    <li>{{this}}</li>

    {{/each}}

    <p>Brewer Tips: {{this.brewers_tips}}</p>
  </div>
</div>

